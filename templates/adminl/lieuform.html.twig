{% extends 'baseAdmin.html.twig' %}
{% block body %}

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Form Places</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Forms</li>
          <li class="breadcrumb-item active">Places</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Places</h5>

              <!-- General Form Elements -->
              {{ form_start(f) }}
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Name</label>
                  <div class="col-sm-10">
                    {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>
                
                <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Price</label>
                  <div class="col-sm-10">
                    {{ form_widget(f.prix,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>
                {#
                <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Image Upload</label>
                  <div class="col-sm-10">
                    <input class="form-control" type="file" id="formFile">
                  </div>
                </div>#}
                <div class="row mb-3">
                  <label for="inputDate" class="col-sm-2 col-form-label">Date</label>
                  <div class="col-sm-10">
                    {{ form_widget(f.date,{'attr':{'class':'form-control'}}) }}
                  </div>
                
                <div class="row mb-3">
                  
                </div>

                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Category</label>
                  <div class="col-sm-10">
                    {{ form_widget(f.category,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>

                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-10">
                    {{ form_widget(f.save,{'attr':{'class':'btn btn-primary'}}) }}
                  </div>
                </div>

                {{form_end(f)}}<!-- End General Form Elements -->

            </div>
          </div>

        

        
      </div>
    </section>

  </main><!-- End #main -->     
{% endblock %}
